<%= form_with scope: :appointment, url: '/appointments',  local: true do |form| %>
  <p>
    <%= form.label :first_name %><br>

    <%= form.text_field :first_name, :required => true  %>
  </p>
  <p>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name, :required => true  %>
  </p>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, :required => true  %>
  </p>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, :required => true    %>
  </p>
  <p>
    <%= form.label :start_date %><br>
    <%= form.text_field :start_date, :required => true,  :placeholder => 'dd/mm/yyyy', class: "datepicker" %>
  </p>
   <p>
    <%= form.label :end_date %><br>
    <%= form.text_field :end_date, :required => true, :placeholder => 'dd/mm/yyyy', class: "datepicker" %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, :required => true  %>
  </p>
   <p>
    <%= form.submit %>
  </p>
<% end %>
  <script>
   $('.datepicker').datepicker({ dateFormat: 'dd-mm-yy' });
  </script>

  