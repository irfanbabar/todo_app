<!DOCTYPE html>
<html>
  <head>
    <title>TodoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
     <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <div>
      <%= flash[:error] %>
      <%= flash[:success] %>
     </div>
       <%= render 'layouts/todoheader' %>
    <%= yield %>
       <%= render 'layouts/footer' %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
